---
import { Badge } from "@/components/ui/badge";
import { cn } from "@/lib/utils";
---

<section
  class="mx-auto max-w-7xl py-20 px-4 w-full grid grid-cols-1 md:grid-cols-2 gap-8 p-10 items-center"
>
  <div class="flex flex-col items-start">
    <img src="/public/beneficios.png" alt="Beneficios y Características">
  </div>
  <div class="flex flex-col justify-center lg:justify-start gap-7">
    <Badge
      variant="outline"
      className={cn(
        "font-cairo font-bold text-[20px] text-default1 bg-default1/10 border border-default1/50 w-[260px] text-center"
      )}>Beneficios y Características</Badge
    >
    <div class="">
      <h3 class="font-display font-normal text-[40px]">
        ¿Por qué elegir nuestras prótesis?
      </h3>
    </div>
    <ul class="space-y-4 font-display font-light text-[20px]">
      <li class="flex items-center gap-4">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="24"
          height="24"
          viewBox="0 0 24 24"
          fill="currentColor"
          class="icon icon-tabler icons-tabler-filled icon-tabler-circle-check"
        >
          <path stroke="none" d="M0 0h24v24H0z" fill="none"></path>
